{
  "name": "@notely/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Notely backend API (Node, Express, TypeScript)",
  "license": "MIT",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
